<style>
  /* Brand message container - RIGHT ALIGNED (from wish-apparels) */
  .brand-message-content-{{ section.id }} {
    padding: 0;
    padding-right: 1.5rem;
    max-width: 80vw;
    margin-left: auto;
    color: black;
    text-align: right;
  }

  @media screen and (min-width: 640px) {
    .brand-message-content-{{ section.id }} {
      padding-right: 5rem;
    }
  }

  /* Brand CTA button - BLACK PILL STYLE (from wish-apparels) */
  .brand-cta-{{ section.id }} {
    background: black;
    border-radius: 20rem;
    padding: 4px;
    color: white !important;
    padding-left: 2rem;
    padding-right: 2rem;
    display: inline-block;
    margin-top: 1.5rem;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: opacity 0.3s;
  }

  .brand-cta-{{ section.id }}:hover {
    opacity: 0.9;
  }

  /* Footer quote - RIGHT ALIGNED WITH LARGE SPACING (from wish-apparels) */
  .brand-footer-quote-{{ section.id }} {
    text-align: right;
    color: black;
    margin-top: 10rem;
    margin-left: auto;
    max-width: 80vw;
    font-size: 0.875rem;
  }

  /* Responsive padding adjustments (from wish-apparels) */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
</style>

<div class="px-[1.5rem] sm:px-[5rem] section-{{ section.id }}-padding">
  <div class="brand-message-content-{{ section.id }}">
    {% if section.settings.message_text != blank %}
      <small>
        <div class="leading-relaxed">
          {{ section.settings.message_text }}
        </div>
      </small>
    {% endif %}

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="brand-cta-{{ section.id }}"
      >
        {{ section.settings.button_label }}
      </a>
    {% endif %}

    {% if section.settings.footer_quote != blank %}
      <div class="brand-footer-quote-{{ section.id }}">
        <small>{{ section.settings.footer_quote }}</small>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Brand Message",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "richtext",
      "id": "message_text",
      "label": "Message Text",
      "default": "<p><em>Kiswa Noir Minimalism</em></p><p>Accessible design by producing less & building better.<br/>Contemporary fashion from the heart of creativity</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop All"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "footer_quote",
      "label": "Footer Quote",
      "info": "Optional quote displayed below with large spacing",
      "default": "* Good design is as little design as possible *"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "unit": "px",
      "label": "Padding Top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 36,
      "unit": "px",
      "label": "Padding Bottom"
    }
  ],
  "presets": [
    {
      "name": "Brand Message"
    }
  ]
}
{% endschema %}
